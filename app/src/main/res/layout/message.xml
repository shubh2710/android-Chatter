<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_margin="2dp"
        android:background="#8cef2a"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#8cef2a"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp">
    <RelativeLayout
        android:id="@+id/layout"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/message_user"
        android:text="sender name"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="hh:mm"
        android:id="@+id/message_time"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_user"
        android:text="mmss"
        android:layout_marginTop="2dp"
        android:id="@+id/message_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/card_view"
        android:layout_width="200dp"
        card_view:cardBackgroundColor="#2befd2"
        android:layout_alignParentEnd="true"
        android:layout_margin="2dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp">
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/mylayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/message_userTo"
            android:text="sender name"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="hh:mm"
            android:id="@+id/message_timeTo"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/message_userTo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_userTo"
            android:layout_alignParentStart="true"
            android:text="mes"
            android:layout_marginTop="2dp"
            android:id="@+id/message_textTo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp"
            android:background="#2befd2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="D"
            android:id="@+id/message_status"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/message_timeTo" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>